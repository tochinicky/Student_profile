<% include ./partials/header %>

    <div>
        <h2>Register</h2>
    </div>
    <div class="container">
        <div class="jumbotron edge">
            <form action="/home" method="POST">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input type="text" class="form-control" id="name" name="student[name]" placeholder="Enter your full name">
                </div>
                <div class="form-group">
                    <label for="name">Email</label>
                    <input type="text" class="form-control" id="name" name="student[email]" placeholder="Enter your email">
                </div>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="text" class="form-control" id="image" name="student[image]" placeholder="Passport url">
                </div>
                <div class="form-group">
                    <label for="age">Age</label>
                    <input type="text" class="form-control" id="age" name="student[age]" placeholder="How old are you?">
                </div>
                <div class="form-group">
                    <label>Gender:</label>
                    <div class="form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" name="student[gender]" type="radio" value="Male"> Male
                        </label>
                    </div>
                    <div class="form-check">
                        <label class="form-check-label">
                        <input class="form-check-input" name="student[gender]" type="radio" value="Female"> Female
                    </label>
                </div>
                
                <input type="submit">
            </form>
        </div>
    </div>

<% include ./partials/footer %>